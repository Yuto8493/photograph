<section>
  <div>
    <div class="like-btn">
      <% if current_user.like?(post) %>
        <%= render 'favorites/unlike', post: post %>
      <% else %>
        <%= render 'favorites/like', post: post %>        
      <% end %>
    </div>
    
    <%= link_to post do %>
      <i class="far fa-comment comment-icon"></i>
    <% end %>
  </div>
  
  
  <div class="like-user">
    <%= render 'favorites/like_count', post: post %>
  </div>

  
</section>