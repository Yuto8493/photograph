<div class="enter-cards">
  <div class="login-card">
    <h1>Photograph</h1>

    <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="form-group">
            <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        </div>
      </div>
      
    <% end %>
  </div>
  <div class="change-form">
    <p>アカウントをお持ちでないですか？<%= link_to '登録する', root_path, class: 'text-primary' %></p>
  </div>
</div>