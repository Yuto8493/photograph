document.querySelectorAll('.unlike').forEach(function(btn) {
    btn.addEventListener('ajax:success', function() {
        var like_btn = btn.parentNode;
        like_btn.innerHTML = '<%= j(render 'favorites/like', post: @post ) %>';
        document.querySelector('.like-user').innerHTML = '<%= j(render 'favorites/like_count', post: @post) %>';
    });
});