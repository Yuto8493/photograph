document.querySelectorAll('.unfollow').forEach(function(f) {
    f.addEventListener('ajax:success', function() {
        var follow_form = f.parentNode;
        follow_form.innerHTML = '<%= j(render 'relationships/follow', user: @user ) %>';
        document.querySelector('.follower-count').innerHTML = "<%= j(render 'users/follower', user: @user) %>";
    });
});
